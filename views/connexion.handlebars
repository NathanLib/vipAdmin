{{#if session.utilisateur}}
<meta http-equiv="refresh" content="0;url=/accueil">
{{else}}
<div class="connexion">
    <h3>Administration</h3>

    <div class="afficherMessageErreur">
        {{#if erreurConnexion}} <p>Attention : {{erreurConnexion}}</p>{{/if}}
    </div>

    <form class="" action="/authentification" method="post">
        <div class="login_connexion">
            <div class="text_login_connexion">
                <p>Login :</p>
            </div>
            <div class="input_login_connexion">
                <input type="text" name="login" value="" required>
            </div>
        </div>

        <div class="mdp_connexion">
            <div class="text_mdp_connexion">
                <p>Mot de passe :</p>
            </div>
            <div class="input_mdp_connexion">
                <input type="password" name="mdp" value="" required>
            </div>
        </div>

        <div class="boutonsConnexion">
            <div class="btn_annulation_connexion">
                <input type="reset" name="annulation" value="Annuler">
            </div>

            <div class="btn_confirmation_connexion">
                <input type="submit" name="confirmation" value="Connexion">
            </div>
        </div>
    </form>
</div>
{{/if}}
